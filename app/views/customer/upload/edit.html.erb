<style>
  input[type="file"] {
      display: none;
  }
  .custom-file-upload {
    border: 1px solid #ccc;
    display: inline-block;
    padding: 6px 12px;
}
</style>
<div class="container">
  <br/><br/>
  <br/><br/>
  <br/><br/>
  <br/><br/>
  <%= form_for :upload, url: customer_upload_update_path do |f| %>
    <%= f.hidden_field :id, value: params[:id] %>
    <div class="row">
        <div class="col col-md-12 col-sm-12 col-xs-12">
          <center>
            <%= image_tag !@customer.image_url.nil? ? @customer.image_url : 'blank_photo.jpg', class: 'img-fluid', id: 'image', width:'100%' %>
          </center>
        </div>
    </div>
    <div class="row">   
      <div class="col col-md-12">
        <br/>
        <label class="custom-file-upload btn btn-block" style="font-size:50px">
          Select Image
          <%= f.file_field :image, id: 'imgInp' %>
        <label>
      </div>
    </div>  
    <div class="row">
      <div class="col col-md-12"> 
        <br/>
        <button type="submit" class="btn btn-block" style="background-color:#009C3C;color:white;font-size:50px" id="btn_update">Update</button>
      </div>
    </div>
  <% end %>
</div>
<script>
  $(function(){
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        
        reader.onload = function(e) {
          $('#image').attr('src', e.target.result);
        }
        
        reader.readAsDataURL(input.files[0]); // convert to base64 string
      }
    }

    $("#imgInp").change(function() {
      readURL(this);
    });
  });
</script>